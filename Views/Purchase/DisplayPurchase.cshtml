@model IEnumerable<InventoryManagmentSystem.Purchase>

@{
    ViewBag.Title = "DisplayPurchase";
}

<h2>DisplayPurchase</h2>

<p>
    @Html.ActionLink("Create New", "PurchasePorduct", "Purchase" , new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayName("Purchase Name")
        </th>
        <th>
            @Html.DisplayName("Purchas")
        </th>
        <th>
            @Html.DisplayName("Purchase Date")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_qnty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="btn btn-success"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "DeletePurchase", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
