 @model InventoryManagmentSystem.Purchase

@{
    ViewBag.Title = "DeletePurchase";
}

<h3>Delete Purchase</h3>

<h3>Are you sure you want to delete this @Model.Purchase_name ?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal table table-bordered hover" >
        <dt>
            @Html.DisplayName("Purchase Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_name)
        </dd>

        <dt>
            @Html.DisplayName("Purchase Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_qnty)
        </dd>

        <dt>
            @Html.DisplayName("Purchase Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_Date)
        </dd>

    </dl>

    @using (Html.BeginForm("DeletePurchase", "Purchase")) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "DisplayPurchase")
        </div>
    }
</div>
