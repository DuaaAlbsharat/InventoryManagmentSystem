@model InventoryManagmentSystem.Sale

@{
    ViewBag.Title = "DeleteSale";
}

<h2>DeleteSale</h2>

<h3>Are you sure you want to delete this @Model.Sale_name? </h3>
<div>
    <h4>Sale</h4>
    <hr />
    <dl class="dl-horizontal table table-bordered table-hover">
        <dt>
            @Html.DisplayName("Sale Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_name)
        </dd>

        <dt>
            @Html.DisplayName("Sale Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_qnty)
        </dd>

        <dt>
            @Html.DisplayName("Sale Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_Date)
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteSale" ,"Sale")) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "DisplaySale")
        </div>
    }
</div>
